{
  "$schema": "https://json.schemastore.org/package",
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bugs": "https://github.com/Shuunen/recipes/issues",
  "description": "Personal recipes collection (in french)",
  "devDependencies": {
    "chokidar": "3",
    "eslint": "8",
    "eslint-plugin-html": "7",
    "eslint-plugin-unicorn": "48",
    "globcat": "3",
    "npm-parallel": "2",
    "repo-check": "1.31",
    "servor": "4",
    "showdown": "1.9",
    "showdown-toc": "1",
    "shuutils": "7.3",
    "watchlist": "0"
  },
  "files": [
    "src",
    "public"
  ],
  "homepage": "https://github.com/Shuunen/recipes",
  "keywords": [
    "personal",
    "website",
    "recipes"
  ],
  "license": "GPL-3.0",
  "name": "@shuunen/recipes",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/recipes.git"
  },
  "scripts": {
    "build": "node bin/build && unique-mark public/index.html && echo build success",
    "build:watch": "watchlist src -eager -- pnpm build",
    "check": "pnpm build && repo-check && pnpm lint",
    "dev": "parallel serve build:watch",
    "lint": "eslint --cache --fix --ext .js,.html . && echo lint success",
    "postversion": "git push && git push --tags",
    "preversion": "pnpm check",
    "serve": "servor public --browse --reload",
    "test": "echo no tests yet && echo test success"
  },
  "type": "module",
  "version": "1.1.0"
}
