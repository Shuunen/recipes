{
  "author": "Romain Racamier-Lafon <romain.racamier@gmail.com>",
  "bugs": "https://github.com/Shuunen/recipes/issues",
  "description": "Personal recipes collection (in french)",
  "devDependencies": {
    "chokidar": "3",
    "eslint": "8",
    "eslint-plugin-html": "7",
    "eslint-plugin-unicorn": "45",
    "globcat": "2",
    "npm-parallel": "2",
    "repo-check": "1.30",
    "servor": "4",
    "showdown": "1.9",
    "showdown-toc": "1",
    "shuutils": "7",
    "watchlist": "0"
  },
  "files": [
    "src",
    "public"
  ],
  "homepage": "https://github.com/Shuunen/recipes",
  "keywords": [
    "personal",
    "website",
    "recipes"
  ],
  "license": "GPL-3.0",
  "name": "@shuunen/recipes",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Shuunen/recipes.git"
  },
  "scripts": {
    "build": "node bin/build && unique-mark public/index.html",
    "build:watch": "watchlist src -eager -- npm run build",
    "check": "repo-check",
    "ci": "npm run build && npm run lint && npm run check",
    "dev": "parallel serve build:watch",
    "lint": "eslint --fix --ignore-path .gitignore --ext .js,.html .",
    "postversion": "git push && git push --tags",
    "preversion": "npm run ci",
    "serve": "servor public --browse --reload",
    "test": "echo no tests yet"
  },
  "type": "module",
  "version": "1.1.0"
}
